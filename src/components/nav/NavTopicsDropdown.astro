---
/**
 * Nav Topics Dropdown Menu
 */

import { Icon } from 'astro-icon/components'

import { menuItemCommonClass } from './NavTopicItem.astro'

import { HIDDEN_MENUS, MENUS } from '@data/menus'

const FiChevronDownIcon = 'FiChevronDown'

const dropdownItemClass = 'flex items-center p-3 whitespace-nowrap'
---

<!-- Popover -->
<div x-data="{open: false}" class="relative">
  <!-- PopoverButton -->
  <button
    class:list={[
      'group flex pr-1.5 !outline-none lg:hidden',
      menuItemCommonClass,
    ]}
    x-ref="PopoverButton"
    x-on:click="open = ! open"
    x-bind:class="open ? '!bg-slate-700 text-white' : 'text-opacity-90'"
  >
    <span>菜单</span>
    <Icon
      name={FiChevronDownIcon}
      class="ml-1 h-6 w-6 transition duration-150 ease-in-out"
      aria-hidden="true"
      x-bind:class="!open || 'text-opacity-70'"
    />
  </button>
  <!-- PopoverPanel -->
  <div
    class="absolute left-0 z-10 mt-4 w-fit shadow-xl sm:px-0 lg:max-w-3xl"
    x-ref="PopoverPanel"
    x-anchor="$refs.PopoverButton"
    x-show="open"
    x-on:click.outside="open = false"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 translate-y-1"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 translate-y-1"
    x-cloak
  >
    <div class="overflow-hidden rounded-lg shadow-lg">
      <!-- PopoverPanelItems -->
      <div
        class="bg-nav-dark-bg relative grid divide-y divide-slate-600 px-3 py-1"
      >
        {
          MENUS.concat(HIDDEN_MENUS).map((item) => (
            <a
              class:list={[dropdownItemClass, 'sm:hover:text-white']}
              href={item.uri}
            >
              <div class="flex gap-2">
                {item.icon}
                {item.name}
              </div>
            </a>
          ))
        }
      </div>
      <!-- PopoverPanelItems End -->
    </div>
  </div>
  <!-- PopoverPanel End -->
</div>
